---
import Logo from './Logo.astro';
import WaveDecoration from './WaveDecoration.astro';
import HeaderDecorations from './HeaderDecorations.astro';
---

<header class="relative bg-gradient-to-b from-ocean-900 to-ocean-800 text-white">
  <HeaderDecorations />
  <div class="container mx-auto px-4 py-3 md:py-4 relative z-10">
    <nav class="flex items-center justify-between">
      <Logo size="sm" class="md:hidden text-white [&_span]:text-white [&_span]:text-ocean-200 [&_svg]:text-ocean-300" />
      <Logo size="md" class="hidden md:flex text-white [&_span]:text-white [&_span]:text-ocean-200 [&_svg]:text-ocean-300" />

      <div class="hidden md:flex items-center gap-8">
        <a href="/" class="text-ocean-100 hover:text-white transition-colors font-medium">
          Inicio
        </a>
        <a href="/#precios" class="text-ocean-100 hover:text-white transition-colors font-medium">
          Precios
        </a>
        <a href="/presupuesto" class="bg-coral-500 hover:bg-coral-600 text-white px-5 py-2 rounded-full font-semibold transition-all hover:scale-105 shadow-lg">
          Arma tu Pedido
        </a>
        <!-- Admin dropdown (visible solo si autenticado) -->
        <div id="admin-dropdown" class="relative hidden">
          <button id="admin-dropdown-btn" class="text-ocean-200 hover:text-white transition-colors font-medium flex items-center gap-1">
            Admin
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div id="admin-dropdown-menu" class="hidden absolute right-0 top-full mt-2 w-48 bg-white rounded-xl shadow-lg border border-ocean-100 overflow-hidden z-50">
            <a href="/admin/presupuestos" class="block px-4 py-2.5 text-sm text-ocean-700 hover:bg-ocean-50 transition-colors">
              Ver Presupuestos
            </a>
            <a href="/admin/presupuestos" class="block px-4 py-2.5 text-sm text-ocean-700 hover:bg-ocean-50 transition-colors border-t border-ocean-100">
              Crear Presupuesto
            </a>
          </div>
        </div>
      </div>

      <!-- Menú móvil -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-ocean-100 hover:text-white active:bg-ocean-700 rounded-lg transition-colors"
        aria-label="Menú"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Menú móvil expandido -->
  <div id="mobile-menu" class="hidden md:hidden bg-ocean-800 border-t border-ocean-700">
    <div class="container mx-auto px-4 py-3 flex flex-col gap-2">
      <a href="/" class="text-ocean-100 hover:text-white active:bg-ocean-700 transition-colors font-medium py-3 px-3 rounded-lg">
        Inicio
      </a>
      <a href="/#precios" class="text-ocean-100 hover:text-white active:bg-ocean-700 transition-colors font-medium py-3 px-3 rounded-lg">
        Precios
      </a>
      <a href="/presupuesto" class="bg-coral-500 active:bg-coral-600 text-white px-5 py-3 rounded-full font-semibold transition-all text-center mt-2">
        Arma tu Pedido
      </a>
      <!-- Admin mobile (visible solo si autenticado) -->
      <div id="admin-mobile-links" class="hidden border-t border-ocean-700 pt-2 mt-2">
        <a href="/admin/presupuestos" class="text-ocean-200 hover:text-white active:bg-ocean-700 transition-colors font-medium py-3 px-3 rounded-lg block">
          Admin: Presupuestos
        </a>
      </div>
    </div>
  </div>

  <!-- Olas decorativas en la parte inferior -->
  <WaveDecoration position="bottom" />
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Cerrar menú al hacer click en un enlace
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
    });
  });

  // Admin dropdown visibility - check auth via API
  async function checkAdminAuth() {
    try {
      const response = await fetch('/api/auth/me', { credentials: 'include' });
      if (response.ok) {
        const data = await response.json();
        if (data.authenticated) {
          document.getElementById('admin-dropdown')?.classList.remove('hidden');
          document.getElementById('admin-mobile-links')?.classList.remove('hidden');
        }
      }
    } catch (e) {
      // Not authenticated, menu stays hidden
    }
  }
  checkAdminAuth();

  // Admin dropdown toggle
  const dropdownBtn = document.getElementById('admin-dropdown-btn');
  const dropdownMenu = document.getElementById('admin-dropdown-menu');

  dropdownBtn?.addEventListener('click', () => {
    dropdownMenu?.classList.toggle('hidden');
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest('#admin-dropdown')) {
      dropdownMenu?.classList.add('hidden');
    }
  });
</script>
