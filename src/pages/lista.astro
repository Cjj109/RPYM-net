---
import Layout from '../layouts/Layout.astro';
import { getProducts, groupByCategory, getBCVRate, formatPriceUSD, formatPriceBs } from '../lib/sheets';

// Obtener tasa BCV y productos
const bcvRate = await getBCVRate();
const products = await getProducts(bcvRate.rate);
const categories = groupByCategory(products);
---

<Layout
  title="Lista de Precios - RPYM"
  description="Lista de precios de mariscos frescos. Camarones, pulpos, calamares y más del Muelle Pesquero El Mosquero."
>
  <section class="py-6 md:py-10 px-4">
    <div class="container mx-auto max-w-3xl">
      <!-- Header -->
      <div class="text-center mb-6 md:mb-8">
        <h1 class="text-2xl md:text-3xl font-display font-bold text-ocean-900 mb-2">
          Lista de Precios
        </h1>
        <p class="text-ocean-600 text-sm md:text-base">
          Precios actualizados · Muelle "El Mosquero" · Puesto 3 y 4
        </p>
        <div class="inline-flex items-center gap-2 mt-3 bg-green-100 text-green-800 px-3 py-1.5 rounded-full text-sm">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          Tasa BCV: Bs. {bcvRate.rate.toFixed(2)} / USD
        </div>
      </div>

      <!-- Lista de precios por categoría -->
      <div class="space-y-6">
        {categories.map((category) => (
          <div class="bg-white rounded-xl shadow-sm border border-ocean-100 overflow-hidden">
            <div class="bg-ocean-50 px-4 py-3 border-b border-ocean-100">
              <h2 class="font-display font-semibold text-ocean-900 text-lg">
                {category.name}
              </h2>
            </div>

            <div class="divide-y divide-ocean-100">
              {category.products.filter(p => p.disponible).map((product) => (
                <div class="px-4 py-3 flex items-center justify-between gap-4">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2">
                      <span class="text-ocean-900 font-medium">{product.nombre}</span>
                      {product.masVendido && (
                        <span class="inline-flex items-center px-1.5 py-0.5 bg-coral-100 text-coral-700 text-[10px] font-medium rounded">
                          Popular
                        </span>
                      )}
                    </div>
                    {product.descripcionCorta && (
                      <p class="text-ocean-600 text-xs mt-0.5">{product.descripcionCorta}</p>
                    )}
                  </div>
                  <div class="text-right flex-shrink-0">
                    <div class="text-coral-600 font-bold">
                      {formatPriceUSD(product.precioUSD)}
                    </div>
                    <div class="text-ocean-600 text-xs">
                      {formatPriceBs(product.precioBs)}
                    </div>
                    <div class="text-ocean-600 text-[10px]">
                      /{product.unidad}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Información de contacto -->
      <div class="mt-8 bg-ocean-50 rounded-xl p-5 text-center">
        <p class="text-ocean-700 font-medium mb-2">
          Para hacer tu pedido:
        </p>
        <a
          href="https://wa.me/584142145202?text=Hola%2C%20quisiera%20hacer%20un%20pedido"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-500 text-white px-5 py-2.5 rounded-full font-medium transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
          </svg>
          Escríbenos al WhatsApp
        </a>
        <p class="text-ocean-600 text-xs mt-3">
          Muelle Pesquero "El Mosquero" · Puesto 3 y 4 · Maiquetía
        </p>
        <p class="text-ocean-600 text-xs mt-1">
          Martes a Domingo · 6:00 AM - 2:30 PM
        </p>
      </div>

      <!-- CTA prominente para Armar Presupuesto -->
      <div class="mt-8 bg-gradient-to-r from-coral-500 to-coral-600 rounded-xl p-6 text-center shadow-lg">
        <h3 class="text-white font-display font-bold text-lg md:text-xl mb-2">
          ¿Quieres calcular tu pedido?
        </h3>
        <p class="text-white/90 text-sm mb-4">
          Usa nuestra calculadora para armar tu presupuesto al instante
        </p>
        <a
          href="/presupuesto"
          class="inline-flex items-center gap-2 bg-white hover:bg-ocean-50 text-coral-600 px-6 py-3 rounded-full font-semibold text-base transition-all hover:scale-105 shadow-md"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
          Armar mi Presupuesto
        </a>
      </div>
    </div>
  </section>
</Layout>
