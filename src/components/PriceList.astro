---
import type { Category, BCVRate } from '../lib/sheets';
import ProductCard from './ProductCard.astro';

interface Props {
  categories: Category[];
  bcvRate: BCVRate;
}

const { categories, bcvRate } = Astro.props;

// Iconos por categor√≠a
const categoryIcons: Record<string, string> = {
  'Camarones': 'ü¶ê',
  'Calamares': 'ü¶ë',
  'Mariscos': 'ü¶Ä',
  'Especiales': 'üëë',
};
---

<section id="precios" class="py-10 md:py-16 px-4">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-6 md:mb-8">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-display font-bold text-ocean-900 mb-3 md:mb-4">
        Lista de Precios
      </h2>
      <p class="text-ocean-600 max-w-2xl mx-auto text-sm md:text-base">
        Productos frescos del d√≠a, directamente del muelle a tu mesa.
        Los precios pueden variar seg√∫n disponibilidad.
      </p>
    </div>

    <!-- Indicador de tasa BCV - Compacto en m√≥vil -->
    <div class="flex justify-center mb-6 md:mb-10">
      <div class="inline-flex items-center gap-2 md:gap-3 bg-white border border-ocean-200 rounded-full px-3 py-2 md:px-5 md:py-2.5 shadow-sm">
        <div class="flex items-center gap-1.5 md:gap-2">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          <span class="text-xs md:text-sm font-medium text-ocean-700">Tasa BCV</span>
        </div>
        <div class="h-4 w-px bg-ocean-200"></div>
        <span class="text-base md:text-lg font-bold text-ocean-900">
          Bs. {bcvRate.rate.toFixed(2)}
        </span>
        <span class="text-[10px] md:text-xs text-ocean-600">
          / USD
        </span>
      </div>
    </div>

    <div class="space-y-6 md:space-y-10">
      {categories.map((category) => (
        <div class="bg-ocean-50/50 rounded-xl md:rounded-2xl p-4 md:p-6 lg:p-8">
          <h3 class="text-lg md:text-xl lg:text-2xl font-display font-semibold text-ocean-800 mb-4 md:mb-6 flex items-center gap-2 md:gap-3">
            <span class="text-xl md:text-2xl">{categoryIcons[category.name] || 'üê†'}</span>
            {category.name}
            <span class="text-xs md:text-sm font-normal text-ocean-600 font-body">
              ({category.products.length})
            </span>
          </h3>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 md:gap-4">
            {category.products.map((product) => (
              <ProductCard product={product} />
            ))}
          </div>
        </div>
      ))}
    </div>

    <p class="text-center text-xs md:text-sm text-ocean-600 mt-6 md:mt-8">
      Tasa {bcvRate.source} actualizada: {bcvRate.date}.
      Consulta disponibilidad por WhatsApp.
    </p>
  </div>
</section>
