---
import Layout from '../layouts/Layout.astro';
import BudgetCalculator from '../components/BudgetCalculator';
import { getProducts, groupByCategory, getBCVRate } from '../lib/sheets';

// Obtener tasa BCV y productos
const bcvRate = await getBCVRate();
const products = await getProducts(bcvRate.rate);
const categories = groupByCategory(products);
---

<Layout
  title="Arma tu Pedido - RPYM"
  description="Calcula tu presupuesto de mariscos frescos. Selecciona los productos que necesitas y obtén un estimado al instante."
>
  <section class="py-6 md:py-12 px-4">
    <div class="container mx-auto max-w-6xl">
      <!-- Header - Compacto en móvil -->
      <div class="text-center mb-6 md:mb-10">
        <a
          href="/"
          class="inline-flex items-center gap-1.5 md:gap-2 text-ocean-600 hover:text-ocean-800 mb-4 md:mb-6 transition-colors text-sm md:text-base"
        >
          <svg class="w-3.5 h-3.5 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Volver al inicio
        </a>

        <h1 class="text-2xl md:text-3xl lg:text-4xl font-display font-bold text-ocean-900 mb-2 md:mb-4">
          Arma tu Pedido
        </h1>
        <p class="text-ocean-600 max-w-2xl mx-auto text-sm md:text-base">
          Selecciona los productos que necesitas y la cantidad. El total se
          calculará automáticamente en dólares y bolívares.
        </p>
      </div>

      <!-- Calculadora de presupuesto (React component con hidratación) -->
      <BudgetCalculator categories={categories} bcvRate={bcvRate} client:load />

      <!-- Nota informativa - Más compacta en móvil -->
      <div class="mt-8 md:mt-12 bg-sand-100 border border-sand-200 rounded-xl md:rounded-2xl p-4 md:p-6 max-w-2xl mx-auto">
        <h3 class="font-semibold text-ocean-900 mb-2 flex items-center gap-2 text-sm md:text-base">
          <svg class="w-4 h-4 md:w-5 md:h-5 text-coral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Nota importante
        </h3>
        <ul class="text-ocean-600 text-xs md:text-sm space-y-1.5 md:space-y-2">
          <li>• Los precios en bolívares se calculan con la tasa BCV del día.</li>
          <li>• La disponibilidad depende de la pesca del día.</li>
          <li>• Los productos se venden por peso (kg).</li>
          <li>• Arma tu pedido y presiona el botón de WhatsApp para enviarlo.</li>
        </ul>

        <div class="mt-4 pt-4 border-t border-sand-200">
          <a
            href="https://wa.me/584142145202?text=Hola%2C%20quisiera%20consultar%20sobre%20sus%20productos"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-500 text-white px-5 py-2.5 rounded-full text-sm font-medium transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
            </svg>
            Escríbenos al WhatsApp
          </a>
          <p class="text-ocean-500 text-xs mt-2">
            Muelle Pesquero "El Mosquero" - Puesto 3 y 4, Maiquetía
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
