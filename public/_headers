# PWA files - Service Worker must not be cached too long
/sw.js
  Cache-Control: public, no-cache
  Service-Worker-Allowed: /

/manifest.json
  Cache-Control: public, max-age=86400

# PWA icons - can be cached
/icons/*
  Cache-Control: public, max-age=31536000, immutable

# Cache control for static assets
/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable

/assets/*
  Cache-Control: public, max-age=31536000, immutable

/chunks/*
  Cache-Control: public, max-age=31536000, immutable

/entry/*
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - always check for updates (important for price changes)
/*.html
  Cache-Control: public, no-cache

/
  Cache-Control: public, no-cache

/presupuesto
  Cache-Control: public, no-cache

/lista
  Cache-Control: public, no-cache

# Admin - never cache (sensitive + real-time data)
/admin
  Cache-Control: private, no-cache, no-store, must-revalidate

/admin/*
  Cache-Control: private, no-cache, no-store, must-revalidate

# API endpoints - never cache
/api/*
  Cache-Control: no-store

# Security headers
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
